{
	"name": "root",
	"private": true,
	"scripts": {
		"clean": "git clean -f -d -X",
		"depcheck": "pnpm -r depcheck",
		"format": "pnpm -r format",
		"lint": "pnpm -r lint",
		"unused": "pnpm -r unused",
		"ncu:major": "ncu && pnpm -r exec ncu",
		"ncu:minor": "ncu -t minor -u && pnpm -r exec ncu -t minor -u",
		"ncu:patch": "ncu -t patch -u && pnpm -r exec ncu -t patch -u",
		"pack": "pnpm -r exec npm pack",
		"postinstall": "echo \"Don't forget to build all packages once: pnpm -r build\"",
		"prepare": "husky",
		"prepare:husky:commitlint": "echo \"npx commitlint --edit $1\" >> .husky/commit-msg",
		"prepare:husky:format": "echo \"pnpm format\" >> .husky/pre-push",
		"prepare:husky:lint": "echo \"pnpm lint\" >> .husky/pre-commit",
		"prepare:husky:unused": "echo \"pnpm unused\" >> .husky/pre-push",
		"reinstall": "pnpm clean:pnpm && pnpm i",
		"update": "pnpm ncu:patch && pnpm ncu:minor && pnpm ncu:major",
		":publish": "pnpm -r exec pnpm :publish",
		":republish": "pnpm -r exec pnpm :republish",
		":unpublish": "pnpm -r exec pnpm :unpublish"
	},
	"devDependencies": {
		"@commitlint/cli": "18.6.1",
		"@commitlint/config-conventional": "18.6.3",
		"@types/node": "20.12.7",
		"cross-env": "7.0.3",
		"depcheck": "1.4.7",
		"husky": "9.0.11",
		"license-report": "6.5.0",
		"npm-check-updates": "16.14.18",
		"npm-run-all": "4.1.5",
		"pnpm": "9.0.5",
		"prettier": "3.2.5",
		"rimraf": "3.0.2",
		"ts-node": "10.9.2",
		"typescript": "5.4.5"
	}
}
