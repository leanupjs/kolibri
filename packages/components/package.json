{
	"name": "@leanup/kolibri-components",
	"version": "1.0.5",
	"description": "Das Components-Modul beinhaltet alle zur Komponenten-Bibliothek gehÃ¶renden Webcomponents.",
	"license": "EUPL-1.2",
	"homepage": "https://github.com/leanupjs/kolibri#readme",
	"repository": "https://github.com/leanupjs/kolibri",
	"bugs": {
		"url": "https://github.com/leanupjs/kolibri/issues",
		"email": "github@martinoppitz.com"
	},
	"contributors": [
		{
			"name": "Martin Oppitz",
			"email": "github@martinoppitz.com"
		}
	],
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"customElements": "custom-elements.json",
	"es2015": "dist/esm/index.mjs",
	"es2017": "dist/esm/index.mjs",
	"types": "dist/types/index.d.ts",
	"unpkg": "dist/stencil/stencil.js",
	"collection:main": "dist/collection/index.js",
	"collection": "dist/collection/collection-manifest.json",
	"sideEffects": false,
	"scripts": {
		"clean": "lerna exec --stream -- git clean -f -d -X && git clean -f -d -X",
		"build": "npm run build:light",
		"build:light": "npm run clear && cross-env NODE_ENV=production stencil build --docs --prod --stats && node scripts/hashing.js && npm run format -- -w",
		"republish:adapters": "cd ../adapters/angular && npm run republish && cd ../react && npm run republish && cd ../solid && npm run republish && cd ../vue && npm run republish && cd ..",
		"republish:themes": "cd ../themes && npm run republish && cd ..",
		"republish:self": "npm run reinstall:kolibri && npm run build:light && npm run :publish",
		"republish:all": "npm run republish && npm run republish:themes && npm run republish:adapters && d ../storybook && npm run reinstall:kolibri",
		"republish": "cd ../core && npm run republish && cd ../schema && npm run republish && cd ../library && npm run republish:self",
		"clear": "rimraf dist loader www ../adapters/angular/src ../adapters/react/src ../adapters/solid/src ../adapters/svelte/src ../adapters/vue/src",
		"lighthouse": "lighthouse --chrome-flags=\"--headless\" --output-path lighthouse.report.html --preset=desktop --quiet",
		"generate": "stencil generate",
		"lint": "eslint src/**/*{.ts,.tsx}",
		"format": "prettier --check src/**/*",
		"serve": "serve www",
		"start": "cross-env NODE_ENV=development stencil build --dev --serve --watch",
		"test": "cross-env NODE_ENV=test stencil test --spec --json --outputFile jest-test-results.json",
		"test:watch": "cross-env NODE_ENV=test stencil test --spec --watchAll",
		"prepack": "npm run build:light && cp package.json package.bak.json && rimraf dist/collection dist/kolibri/assets/@leanup dist/types/assets/@leanup && node scripts/anonymous.js && node scripts/minify.js",
		"postpack": "mv package.bak.json package.json",
		"remove:lock": "rimraf package-lock.json",
		"remove": "npm run remove:lock && git clean -f -d -X",
		"reinstall": "npm run remove && npm i",
		"reinstall:kolibri": "npm cache clear -f && rimraf node_modules/@a11y-ui node_modules/@public-ui package-lock.json && npm update @a11y-ui/* @public-ui/*",
		"reinstall:stencil": "npm cache clear -f && rimraf node_modules/@stencil &&npm run remove:lock && npm update @stencil/*",
		":install": "pnpm i && pnpm update",
		":postinstall": "npm i puppeteer --no-save || true",
		":publish": "npm run :install && npm publish --registry=http://localhost:4873 || true",
		":republish": "npm run :unpublish && npm run :publish",
		":unpublish": "npm unpublish -f --registry=http://localhost:4873"
	},
	"dependencies": {
		"@leanup/kolibri-schema": "1.0.5",
		"@leanup/lib": "1.3.48"
	},
	"devDependencies": {
		"adopted-style-sheets": "1.1.0",
		"@public-ui/components": "1.7.6",
		"@leanup/form": "1.3.48",
		"@stencil/angular-output-target": "0.8.3",
		"@stencil/core": "4.8.1",
		"@stencil/react-output-target": "0.5.3",
		"@stencil/solid-output-target": "file:node_martin/stencil-solid-output-target-0.0.1.tgz",
		"@stencil/svelte-output-target": "0.0.3",
		"@stencil/vue-output-target": "0.8.7",
		"@types/jest": "26.0.24",
		"@types/node": "20.10.4",
		"@types/puppeteer": "7.0.4",
		"@typescript-eslint/eslint-plugin": "6.13.2",
		"@typescript-eslint/parser": "6.13.2",
		"cross-env": "7.0.3",
		"eslint": "8.55.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-html": "7.1.0",
		"eslint-plugin-jsdoc": "46.9.0",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.33.2",
		"jest": "26.6.3",
		"jest-cli": "26.6.3",
		"lighthouse": "11.3.0",
		"prettier": "3.1.0",
		"puppeteer": "21.6.0",
		"query-selector-all-shadow-root": "0.0.3",
		"query-selector-shadow-root": "0.0.3",
		"rimraf": "3.0.2",
		"stencil-awesome-test": "1.0.6",
		"terser": "5.26.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"@public-ui/components": ">=1 <2",
		"@leanup/form": ">=1.2 <2"
	},
	"files": [
		"dist/",
		"custom-elements.json",
		"vscode-custom-data.json"
	]
}
